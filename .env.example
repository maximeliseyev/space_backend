# Server configuration
SERVER_PORT=8080
ENVIRONMENT=development

# Database configuration
# ВАРИАНТ 1: Прямое подключение (любая PostgreSQL)
DATABASE_URL=postgres://username:password@localhost:5432/space_db?sslmode=disable

# ВАРИАНТ 2: Supabase (если используете Supabase)
# Укажите эти переменные вместо DATABASE_URL
# SUPABASE_URL=https://your-project-ref.supabase.co
# SUPABASE_DB_PASSWORD=your_database_password
# SUPABASE_SECRET_KEY=your_service_role_key
# Примечание: DATABASE_URL будет построен автоматически из SUPABASE_URL

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Group Membership Check (Optional)
# Chat ID группы для проверки членства (получите через /getUpdates API)
# Формат: отрицательное число для супергрупп (например: -1001234567890)
# Если не указано, проверка членства пропускается в development режиме
# В production режиме без ALLOWED_CHAT_ID будет возвращаться ошибка
ALLOWED_CHAT_ID=

# JWT Secret - ОБЯЗАТЕЛЬНО! Минимум 32 символа
# Сгенерируйте случайную строку: openssl rand -base64 32
JWT_SECRET=

# Storage path for files
STORAGE_PATH=./storage

# CORS Configuration - КРИТИЧЕСКИ ВАЖНО ДЛЯ БЕЗОПАСНОСТИ!
# Список разрешённых доменов, разделённых запятыми
# В production ОБЯЗАТЕЛЬНО укажите ваш фронтенд домен!
# Не используйте wildcard (*) - это критическая уязвимость!
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://telegram.org

# Для локальной разработки можно добавить localhost:
# ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend-domain.vercel.app,https://telegram.org
